<?xml version="1.0"?>
<odoo>
    <!--
        Views
    -->
    <record id="section_period_view_form" model="ir.ui.view">
        <field name="name">scout.period.view.form</field>
        <field name="model">scout.period</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Services"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" required="True" widget="color_picker"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="section_period_view_tree" model="ir.ui.view">
        <field name="name">scout.period.view.tree</field>
        <field name="model">scout.period</field>
        <field name="arch" type="xml">
            <tree string="Period" editable="top">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!--
        Actions
    -->
    <record id="scout_period_action" model="ir.actions.act_window">
        <field name="name">Scout Periods</field>
        <field name="res_model">scout.period</field>
        <field name="view_id" ref="section_period_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create Scout Period
            </p><p>
            Define period to represent the scout year, or the inscription duration.
            </p>
        </field>
    </record>

</odoo>
